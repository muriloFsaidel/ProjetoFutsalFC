<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    tools:context=".activity.CriarEquipeActivity">

    <!--<ImageView
        android:id="@+id/imageView5"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/logo_largura"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ligafutsal" />-->

    <include
        android:id="@+id/tbCriarEquipe"
        layout="@layout/toolbar"></include>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbCriarEquipe"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textView2"
        android:text="Dados do Time"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="55dp"
        android:text="Nome:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="@dimen/botaoIniciar"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:id="@+id/NomeEquipeId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="39dp"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/botaoIniciar"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="93dp"
        android:text="Liga:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="@dimen/botaoIniciar"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:id="@+id/ligaId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NomeEquipeId"
        android:layout_alignRight="@+id/NomeEquipeId"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="70dp"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/botaoIniciar"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="68dp"
        android:text="Escudo:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="@dimen/botaoIniciar"
        android:textStyle="normal|bold|italic" />

    <Button
        android:id="@+id/botaoCriarEquipeId"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="16dp"
        android:background="@color/cor_botao_darker"
        android:padding="10dp"
        android:text="criar"
        android:textColor="#ffffff"
        android:textSize="@dimen/botaoIniciar"
        android:textStyle="normal|bold|italic" />

</RelativeLayout>